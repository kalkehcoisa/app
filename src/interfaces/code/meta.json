{
  "name": "$t:code",
  "version": "1.0.0",
  "types": ["string", "json"],
  "icon": "code",
  "recommended": {
    "length": 2000
  },
  "options": {
    "language": {
      "name": "$t:language",
      "comment": "$t:language_comment",
      "interface": "dropdown",
      "default": "application/json",
      "options": {
        "choices": {
          "text/plain": "Plain Text",
          "text/javascript": "JavaScript",
          "application/json": "JSON",
          "text/x-vue": "Vue",
          "application/x-httpd-php": "PHP"
        }
      }
    },
    "template": {
      "name": "$t:template",
      "comment": "$t:template_comment",
      "interface": "json",
      "options": {
        "language": "text/plain"
      }
    },
     "lineNumber": {
      "name": "$t:lineNumber",
      "comment": "$t:lineNumber_comment",
      "interface": "toggle",
      "default": true
    }
  },
  "translation": {
    "en-US": {
      "code": "Code",
      "template": "Template",
      "template_comment": "Provide a template the user can use to get started with",
      "language": "Language",
      "language_comment": "Set the programming language to use",
      "lineNumber": "Line Number",
      "lineNumber_comment": "Show line numbers",
      "loc": "No lines of {lang} | One line of {lang} | {count} lines of {lang}",
      "fill_template": "Fill with Template"
    },
    "fr-FR": {
      "code": "Code",
      "template": "Modèle",
      "template_comment": "Fourni un modèle dont l'utilisateur peut se servir pour démarrer",
      "language": "Langage",
      "language_comment": "Spécifie le langage de programmation à utiliser",
      "lineNumber": "Numéro de ligne",
      "lineNumber_comment": "Afficher les numéros de ligne",
      "loc": "Aucune ligne de {lang} | Une ligne de {lang} | {count} lignes de {lang}",
      "fill_template": "Remplir avec le modèle"
    }
  }
}
